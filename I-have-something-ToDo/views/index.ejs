<% include ../views/partials/header %>
  <div class="row">
    <div class="col-md-6">
      <form class="" action="/todo/add" method="post">
        <div class="form-group">
          <label for="" style="color :#F0F3F4">Name</label>
          <input type="text" class="form-control" name="text" value="" placeholder="Add Name">
        </div>
        <div class="form-group">
          <label for="" style="color :#F0F3F4">What You Wanna Do</label>
          <textarea class="form-control" name="body" placeholder="Add Body"></textarea>
        </div>
        <br>
        <button class="btn btn-primary btn-block" type="submit" name="button">Submit</button>
      </form>
    </div>
    <div class="col-md-6">
      <br>
      <ul class="list-group">
        <% todos.forEach(function(todo){ %>
            <li class="list-group-item"><%= todo.text %> : <%= todo.body %>
              <div class="btn btn-dark">
                <a href="/todo/edit/<%= todo._id %>">Edit</a>
              </div>
              <a data-id="<%= todo._id %>" href="#" class="delete-todo btn btn-danger">Delete</a>
            </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% include ../views/partials/footer %>
