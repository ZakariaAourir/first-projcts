extends layout

block content
  br
  form(method="post", action="contact/send")
      h1 #{title}
      .form-group
        label Name
        input.form-control(type='text', placeholder='Enter name', name="name")
      .form-group
        label Email
        input.form-control(type='text', name="email", placeholder='Enter Email')
      .form-group
        label Message
        textarea.form-control(placeholder='MESSAGE', name="message")
      button.btn.btn-default(type="submit") Submit
