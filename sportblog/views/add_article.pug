extends layout

block content
  .container
    br
    h1.style-style.text-center #{title}
    br
    ul.errors
    if errors
      each error, i in errors
        li.alert.alert-danger #{error.msg}
    form(method='post', action='/articles/add')
      .form-group
        label Title:
        input.form-control(type='text', name='title')
      .form-group
        label Subtitle:
        input.form-control(name='subtitle')
      .form-group
        label Category:
        select.form-control(name='Category')
          each category, i in categories
            option(value=category._id) #{category.title}
      .form-group
        label Author:
        input.form-control(name='author')
      .form-group
        label Body:
        textarea.form-control(name='body')
      input.btn.btn-primary(type='submit' , name='submit', value='Save')
      a.btn.btn-secondary(href='/manage/articles') Back
