extends layout

block content
  .container
    br
    h1.style-text.text-center #{title}
    br
    table(class='table table-striped')
      tr
        th Article Title
        th Author
        th Date
        th
      each article, i in articles
        tr
          td #{article.title}
          td #{article.author}
          td #{moment(article.created_at).format('MMMM Do YYYY, h:mm:ss a')}
          td
            a(class='btn btn-tiny btn-default' href='/manage/articles/edit/'+article._id) Edit
    a(class='btn btn-tiny btn-primary' href='/manage/articles/add') Add
