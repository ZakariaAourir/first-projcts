extends layout

block content
  .container
    br
    h1.style-text.text-center #{title}
    br
    != messages()
    table(class='table table-striped')
      tr
        th Category Title
        th
      each category, i in categories
        tr
          td #{category.title}
          td
            a(class='btn btn-tiny btn-default' href='/manage/categories/edit/'+category._id) Edit
    a(class='btn btn-tiny btn-primary' href='/manage/categories/add') Add
