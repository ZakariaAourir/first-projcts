extends layout

block content
  .container
    br
    h1.style-text.text-center #{title}
    br
    ul.errors
      if errors
        each error, i in errors
          li.alert.alert-danger #{error.msg}
    form(method='post', action='/categories/add')
      .form-group
        label Title:
        input.form-control(type='text', name='title')
      .form-group
        label Description:
        textarea.form-control(name='description')
      input.btn.btn-primary(type='submit' , name='submit', value='Save')
      a.btn.btn-secondary(href='/manage/categories') Back
