extends layout

block content
  .container
    br
    h1.style-text.text-center #{title}
    br
    ul.errors
      if errors
        each error, i in errors
          li.alert.alert-danger #{error.msg}
    form(method='post', action='/categories/edit/'+category._id)
      .form-group
        label Title:
        input.form-control(type='text', name='title', value=category.title)
      .form-group
        label Description:
        textarea.form-control(name='description') #{category.description}
      input.btn.btn-primary(type='submit' , name='submit', value='Save')
      a.btn.btn-secondary(href='/manage/categories') Back
      a.btn.btn-danger.category-delete.float-right(href='/manage/categories', data-cat-id=category._id) Delete
